# This file is generated by Nx.
#
# Build the docker image with `npx nx docker-build user-api`.
# Tip: Modify "docker-build" options in project.json to change docker build args.
#
# Run the container with `docker run -p 3000:3000 -t user-api`.
FROM docker.io/node:lts-alpine

ENV HOST=0.0.0.0
ENV PORT=3000

WORKDIR /app

RUN addgroup --system user-api && \
          adduser --system -G user-api user-api

COPY dist/apps/user-api user-api/
RUN chown -R user-api:user-api .

# You can remove this install step if you build with `--bundle` option.
# The bundled output will include external dependencies.
RUN npm --prefix user-api --omit=dev -f install

CMD [ "node", "user-api" ]
